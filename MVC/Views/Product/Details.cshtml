@model DataAccess.DTOs.Product.GETProduct

@{
    ViewBag.Title = "Product Details";
}


<form asp-action="AddToCart" method="post">
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <img src="@Model.ImageURL" class="img-fluid" alt="@Model.Name">
            </div>
            <div class="col-md-6">
                <input type="hidden" name="productId" value="@Model.Id" />
                <label for="quantity">Quantity:</label>
                <input type="number" id="quantity" name="quantity" value="1" min="1" />
                <button type="submit" class="btn btn-primary">Add to Cart</button>
                <a asp-action="Index" class="btn btn-danger">Back to Products</a>
            </div>
        </div>
    </div>
</form>
@if (User.Identity.IsAuthenticated && User.Identity.Name == "admin@gmail.com")
{
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mt-4">Edit Product</a>
}
